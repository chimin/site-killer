{
    "manifest_version": 2,
    "name": "Site Killer",
    "version": "2.0",
    "description": "Kill unwanted sites",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]
}